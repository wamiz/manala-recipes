{{- with .Vars.system -}}

####################################################################
# !!! REMINDER !!!                                                 #
# Don't forget to run `manala up` each time you update this file ! #
####################################################################

manala:
    recipe: symfony-app.docker-hybrid
    repository: https://github.com/Wamiz/manala-recipes.git

##########
# System #
##########

system:
    app_name: {{ .app_name | toYaml }}
    timezone: Etc/UTC

    php:
        configs:
            # XDebug
            - config: |
                ; Comment/uncomment the following lines to disable/enable XDebug
                ;zend_extension=xdebug.so
                ;xdebug.remote_enable=1
                ;xdebug.remote_autostart=1

            # App
            - config: |
                ;App specific configuration

    {{- if .mariadb.version }}
    mariadb:
        version: {{ .mariadb.version | toYaml }}
        init: |
            CREATE DATABASE IF NOT EXISTS `app_test`;
            GRANT ALL ON `app_test`.* TO 'app'@'%';
        ports: {{ .mariadb.ports | toYaml }}
    {{- end }}

    {{- if .redis.version }}
    redis:
        version: {{ .redis.version | toYaml }}
        ports: {{ .redis.ports | toYaml }}
    {{- end }}

    {{- if .mailcatcher.version }}
    mailcatcher:
        version: {{ .mailcatcher.version | toYaml }}
        ports: {{ .mailcatcher.ports | toYaml }}
    {{- end }}

    {{- if .phpmyadmin.version }}
    phpmyadmin:
        ports: {{ .phpmyadmin.ports | toYaml }}
    {{- end }}

    {{- if .phpredisadmin.version }}
    phpredisadmin:
        ports: {{ .phpredisadmin.ports | toYaml }}
    {{- end }}

{{- end }}
